<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@details.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cwomack.a5.DetailsController">
   <top>
      <ImageView fitHeight="172.0" fitWidth="516.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@images/Logo.png" />
         </image>
         <effect>
            <ColorAdjust hue="0.46" saturation="1.0" />
         </effect>
      </ImageView>
   </top>
   <effect>
      <ColorAdjust hue="-0.12" />
   </effect>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox fx:id="btHBox" alignment="CENTER" onMouseClicked="#onDetailButtonClicked" prefHeight="150.0" prefWidth="632.0" styleClass="btc-hbox">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/Bitcoin.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="40.0" />
                     </HBox.margin>
                  </ImageView>
                  <Label fx:id="labBTCValue" prefHeight="150.0" prefWidth="444.0" textFill="WHITE">
                     <font>
                        <Font name="SansSerif Bold" size="50.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </HBox>
            <HBox fx:id="etHBox" alignment="CENTER" onMouseClicked="#onDetailButtonClicked" prefHeight="100.0" prefWidth="200.0" styleClass="eth-hbox">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/Ethereum.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="40.0" />
                     </HBox.margin>
                  </ImageView>
                  <Label fx:id="labETHValue" prefHeight="150.0" prefWidth="444.0" textFill="WHITE">
                     <font>
                        <Font name="SansSerif Bold" size="50.0" />
                     </font>
                     <opaqueInsets>
                        <Insets bottom="15.0" />
                     </opaqueInsets>
                  </Label>
               </children>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
   </center>
</BorderPane>
